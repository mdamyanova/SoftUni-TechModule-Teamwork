@using System.Web.UI.WebControls
@model bYteMe.Models.ExtendedIdentityModels
@{
    ViewBag.Title = "регистрация";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/Content/Register/Normalize.css">
    <link rel="stylesheet" href="/Content/Register/RegisterStyle.css">
</head>
<body>
<div class="form">
    <ul class="tab-group">
        <li class="tab" onclick="location.pathname=''">@Html.ActionLink("назад", "")</li>
        <li class="tab active"><a href="#signup">регистрация</a></li>
    </ul>
    <div class="tab-content">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="signup">
            <h1>регистрирай се безплатно (ще почерпиш една бира)</h1>
            <form action="/" method="post">
                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            потребителско име<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "text-box", autocomplete = "off" })
                        @Html.ValidationMessage("CustomMessage")
                    </div>
                    <div class="field-wrap">
                        <label>
                            име и фамилия<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.FullName, new { @class = "text-box", autocomplete = "off" })
                    </div>
                </div>
                <div class="field-wrap">
                    <label>
                        имейл<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "text-box", autocomplete = "off" })
                </div>
                <div class="field-wrap">
                    <label>
                        биография<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Biography, new { @class = "text-box", autocomplete = "off" })
                </div>
                <div class="field-wrap">
                    <label>
                        парола<span class="req">*</span>
                    </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "text-box", autocomplete = "off" })
                </div>
                <div class="field-wrap">
                    <label>
                        повтори паролата<span class="req">*</span>
                    </label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box", autocomplete = "off" })
                </div>
                <div class="field-wrap">
                    @*<label>
                        профилна снимка<span class="req">*</span>
                    </label>*@
                    @Html.TextBoxFor(m => m.UserProfilePicture, new { @class = "choose-file-button", type = "file" })                  
                </div>
                <button class="register-button">регистрация</button>
                </form>
                </div>
    }
    </div>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="/Scripts/loginScript.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}