<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="../Content/Login/Normalize.css">
    <link rel="stylesheet" href="../Content/Login/LoginStyle.css">
</head>
<body>
    <div class="form">
        <ul class="tab-group">
            <li class="tab"><a href="#signup">регистрация</a></li>
            <li class="tab active"><a href="#login">вписване</a></li>
        </ul>
        <div class="tab-content">

            <div id="login">
                <h1>Здрасти пич!</h1>
                <form action="/" method="post">
                    <div class="field-wrap">
                        <label>
                            потребителско име<span class="req">*</span>
                        </label>
                        <input type="username" required autocomplete="off" />
                    </div>
                    <div class="field-wrap">
                        <label>
                            парола<span class="req">*</span>
                        </label>
                        <input type="password" required autocomplete="off" />
                    </div>
                    <p class="forgot"><a href="#">забравена парола</a></p>
                    <button class="button button-block">вписване</button>
                </form>
            </div>
            <div id="signup">
                <h1>регистрирай се безплатно (ще почерпиш една бира)</h1>
                <form action="/" method="post">
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                име<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off"/>
                        </div>
                        <div class="field-wrap">
                            <label>
                                фамилия<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off"/>
                        </div>
                    </div>
                    <div class="field-wrap">
                        <label>
                            имейл<span class="req">*</span>
                        </label>
                        <input type="email" required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label>
                            парола<span class="req">*</span>
                        </label>
                        <input type="password" required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label>
                            повтори паролата<span class="req">*</span>
                        </label>
                        <input type="password" required autocomplete="off"/>
                    </div>
                    <button type="submit" class="button button-block">регистрация</button>
                </form>
            </div>
        </div><!-- tab-content -->
    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="../Scripts/loginScript.js"></script>
</body>
</html>


@section Scripts {
