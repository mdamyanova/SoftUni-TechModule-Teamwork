@using System.EnterpriseServices
@using bYteMe.Models
@model LoginViewModel
@{
    ViewBag.Title = "вписване";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/Content/Site.css">
    <link rel="stylesheet" href="/Content/Normalize.css">
    <link rel="stylesheet" href="/Content/Login/LoginStyle.css">
</head>
<body>
<div class="form">
    <ul class="tab-group">
        <li class="tab" onclick="location.pathname=''">@Html.ActionLink("назад", "")</li>
        <li class="tab active"><a href="#login">вписване</a></li>
    </ul>
    <div class="tab-content">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div id="login">
                <h1>Здрасти пич!</h1>
                <form action="/" method="post">
                    <div class="field-wrap">
                        <label>
                            потребителско име<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "text-box", autocomplete = "off" })
                    </div>
                    <div class="field-wrap">
                        <label>
                            парола<span class="req">*</span>
                        </label>
                        @Html.PasswordFor(m => m.Password, new { @class = "text-box", autocomplete = "off" })                      
                    </div>
                    <button class="login-button">вписване</button>
                </form>
            </div>
        }
    </div>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="../../Scripts/loginScript.js"></script>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}