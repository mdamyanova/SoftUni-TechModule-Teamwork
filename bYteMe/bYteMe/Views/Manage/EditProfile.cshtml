@model bYteMe.Models.ExtendedIdentityModels
@{
    ViewBag.Title = "редактиране на профила";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/Content/Normalize.css">
    <link rel="stylesheet" href="/Content/Manage/ManageFormsStyle.css">
</head>
<body>
    <div class="form">
        <ul class="tab-group">
            <li class="tab" onclick="location.href = 'Index'">@Html.ActionLink("назад", "Index")</li>
            <li class="tab active"><a>редактиране</a></li>
        </ul>
        <div class="tab-content">
            @using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div id="edit">           
                    <form action="/" method="post">
                        <div class="top-row">
                            <div class="field-wrap">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "text-box", autocomplete = "off" })
                                @Html.ValidationMessage("CustomMessage")
                            </div>
                            <div class="field-wrap">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "text-box", autocomplete = "off" })
                            </div>
                        </div>
                        <div class="field-wrap">
                            @Html.TextBoxFor(m => m.Email, new { @class = "text-box", autocomplete = "off" })
                        </div>
                        <div class="field-wrap">
                            @Html.TextAreaFor(m => m.Biography, new { @class = "text-box", autocomplete = "off" })
                        </div>                      
                        <div class="field-wrap">
                            @*<label>
                                    профилна снимка<span class="req">*</span>
                                </label>*@
                            @Html.TextBoxFor(m => m.UserProfilePicture, new { @class = "choose-file-button", type = "file" })
                        </div>
                        <button class="submit-button">промяна</button>
                    </form>
                </div>
            }
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="/Scripts/loginScript.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}