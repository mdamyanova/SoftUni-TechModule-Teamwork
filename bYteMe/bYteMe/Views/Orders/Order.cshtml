@{
    ViewBag.Title = "утешителна награда";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/Content/Normalize.css">
    <link rel="stylesheet" href="/Content/Orders/OrdersFormsStyle.css">
</head>
<body>
    <div class="form">
        <ul class="tab-group">
            <li class="tab" onclick="location.href='Index'">@Html.ActionLink("назад", "Index")</li>
            <li class="tab active"><a>поръчване</a></li>
        </ul>
        <div class="tab-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div id="order">
                    <form action="/" method="post">
                        <div class="top-row">
                            <div class="field-wrap">
                                <label>
                                    име и фамилия<span class="req">*</span>
                                </label>
                                <input type="text" class="text-box" autocomplete="off" />
                            </div>
                            <div class="field-wrap">
                                <label>
                                    град<span class="req">*</span>
                                </label>
                                <input type="text" class="text-box" autocomplete="off"/>
                            </div>
                            <div class="field-wrap">
                                <label>
                                    улица<span class="req">*</span>
                                </label>
                                <input type="text" class="text-box" autocomplete="off" />
                            </div>
                            <div class="field-wrap">
                                <label>
                                    телефонен номер<span class="req">*</span>
                                </label>
                                <input type="text" class="text-box" autocomplete="off" />
                            </div>
                            <div class="field-wrap">
                                <label>
                                    коментар<span class="req">*</span>
                                </label>
                                <input type="text" class="text-box" autocomplete="off" />
                            </div>
                        </div>
                        <button class="submit-button">промяна</button>
                    </form>
                </div>
            }
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="/Scripts/loginScript.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}